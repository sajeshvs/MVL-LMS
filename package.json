{
  "name": "mvl-lms",
  "version": "2.0.0",
  "description": "MVL Learning Management System - CMMC Level 2 Automated Training Platform",
  "main": "index.html",
  "type": "module",
  "scripts": {
    "gen-curriculum": "node scripts/automation/complete-curriculum-generator.mjs",
    "enrich-mvl": "node scripts/automation/enhance-all-domains.mjs",
    "generate-lessons": "node scripts/automation/generateLessons.mjs",
    "generate-domain": "node scripts/automation/generateLessons.mjs",
    "generate-practice": "node scripts/automation/generateLessons.mjs",
    "list-controls": "node scripts/automation/generateLessons.mjs --list",
    "build": "npm run clean && npm run build:js && npm run build:css",
    "build:legacy": "npm run gen-curriculum && npm run enrich-mvl",
    "build:full": "npm run generate-lessons && npm run build:legacy",
    "build:js": "webpack --mode production",
    "build:css": "tailwindcss -i ./assets/css/input.css -o ./dist/css/output.css --minify",
    "clean": "rimraf dist/",
    "dev": "npm run build:legacy && python -m http.server 8000",
    "dev:watch": "npm run build:full && python -m http.server 8000",
    "dev:webpack": "webpack serve --mode development",
    "start": "python -m http.server 8000",
    "validate": "node -c assets/js/curriculum-data.js",
    "backup": "cp assets/js/curriculum-data.js assets/js/curriculum_backup_$(date +%Y%m%d_%H%M%S).js",
    "restore": "cp assets/js/curriculum_backup.js assets/js/curriculum-data.js",
    "test": "jest && npm run validate && echo 'All tests passed!'",
    "test:watch": "jest --watch",
    "test:browser": "python -m http.server 8080 --directory . & sleep 2 && curl -f http://localhost:8080/test-curriculum.html",
    "lint": "eslint assets/js/**/*.js",
    "lint:fix": "eslint assets/js/**/*.js --fix",
    "reorganize": "node scripts/reorganize-project.js",
    "admin": "echo 'Admin panel not yet implemented - use npm run generate-lessons for now'",
    "help": "echo 'Available commands: generate-lessons, generate-domain <DOMAIN>, generate-practice <DOMAIN> <ID>, list-controls, build, dev, validate, backup, restore, reorganize'",
    "serve": "python -m http.server 8000",
    "db:setup": "echo \"Please see docs/scripts/ for database setup scripts\""
  },
  "keywords": [
    "cmmc",
    "cmmc-level-2",
    "training",
    "cybersecurity",
    "compliance",
    "nist-800-171",
    "automated-generation",
    "mvl-group",
    "gcc-high",
    "dod-contracts"
  ],
  "author": "MVL Group - Cybersecurity Solutions",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/mvl-group/mvl-lms.git"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@babel/core": "^7.22.0",
    "@babel/preset-env": "^7.22.0",
    "babel-loader": "^9.1.0",
    "dompurify": "^3.0.5",
    "dotenv": "^16.0.0",
    "eslint": "^8.50.0",
    "jest": "^29.7.0",
    "openai": "^4.0.0",
    "rimraf": "^5.0.0",
    "tailwindcss": "^3.4.0",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.0",
    "webpack-dev-server": "^4.15.0"
  },
  "optionalDependencies": {
    "playwright": "^1.40.0"
  },
  "config": {
    "automation": {
      "openai_model": "gpt-4-turbo-preview",
      "max_tokens": 4000,
      "temperature": 0.3,
      "backup_retention": 30
    },
    "development": {
      "port": 8000,
      "watch_files": [
        "assets/js/*.js",
        "prompts/*.md",
        "scripts/**/*.mjs"
      ]
    }
  },
  "mvl": {
    "version": "2.0.0",
    "features": [
      "automated-lesson-generation",
      "openai-integration",
      "github-actions-pipeline",
      "mvl-branding",
      "gcc-high-compliance",
      "cmmc-level-2-focus"
    ],
    "domains_supported": [
      "AC",
      "AT",
      "AU",
      "CA",
      "CM",
      "CP",
      "IA",
      "IR",
      "MA",
      "MP",
      "PE",
      "PS",
      "RA",
      "SA",
      "SC",
      "SI"
    ],
    "total_practices": 110,
    "last_updated": "2024-01-15T10:00:00Z"
  }
}